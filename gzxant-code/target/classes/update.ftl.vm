<div class="wrapper wrapper-content animated fadeInRight">
    <form class="form-horizontal form-bordered" id="gzxantForm" >
        #set( $d = "." )
        #set( $s = "${" )
        #foreach($field in ${table.fields})
        <div class="form-group">
            <label class="col-sm-3 control-label">${field.comment}：</label>
            <div class="col-sm-8">
                <input type="text" class="form-control" name="${field.propertyName}" id="${field.propertyName}"
                       value="${s}entity$d${field.propertyName}}" placeholder="请输入${field.comment}"/>
            </div>
        </div>
        #end
        <div class="form-actions fluid">
            <div class="col-md-offset-3 col-md-9">
                <button type="submit" class="btn btn-success">保存</button>
            </div>
        </div>
    </form>
</div>

<script type="text/javascript">
	action = "${action}";

    function cusFunction() {
        console.info("提交之前，最后执行自定义的函数");
    }

	var info_validate = $('#gzxantForm');
    var error = $('.alert-danger', info_validate);
    info_validate.validate({
        errorElement: 'span',
        errorClass: 'error',
        focusInvalid: true,
        rules: {
            #foreach($field in ${table.fields})
            ${field.propertyName}: {
                required: true
            },
            #end
        },
        messages: {
            #foreach($field in ${table.fields})
            ${field.propertyName}: "请输入${field.comment}",
            #end
        }
    });
</script>
