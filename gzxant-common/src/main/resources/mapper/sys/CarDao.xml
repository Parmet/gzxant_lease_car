<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.gzxant.dao.CarDao">

    <sql id="base_select">
        SELECT * FROM car c
    </sql>
    
	<!-- 根据id查找对应的汽车信息 -->
	<select id="selectCarInfoById" parameterType="long" resultType="car">
        <include refid="base_select"></include> where c.id = #{id}
    </select>

	<!-- 查询所有汽车信息列表 -->
	<select id="selectAllCarInfo" resultType="car">
        <include refid="base_select"></include>
    </select>

	<!--  <insert id="insertCar" parameterType = "car">
		INSERT INTO car(
				
		)
	</insert> -->

    <resultMap id="selectAllCarInfo" type="car">
        <id property="id" column="id"></id>
        <result property="remark" column="su_remark"></result>
        <result property="delFlag" column="del_flag"></result>        
        <result property="serviceCity" column="service_city"></result>
        <result property="carTrainName" column="car_train_name"></result>
        <result property="carSizeName" column="car_size_name"></result>
        <result property="carNumber" column="car_number"></result>
        <result property="carPark" column="car_park"></result>
        <result property="onlineStore" column="online_store"></result>
        <result property="carColor" column="car_color"></result>
        <result property="carName" column="car_name"></result>
        <result property="belongCity" column="belong_city"></result>
        <result property="mileage" column="mileage"></result>
        <result property="motorNumber" column="motor_number"></result>
        <result property="insuranceDate" column="insurance_date"></result>
        <result property="annualSurveyDate" column="annual_survey_date"></result>
        <result property="vin" column="vin"></result>
        <result property="carAge" column="carAge"></result>
        <result property="sn" column="sn"></result>
        <result property="code" column="code"></result>
        <result property="ecarType" column="ecar_type"></result>
        <result property="carSource" column="car_source"></result>
        <result property="bluetoothMode" column="bluetooth_mode"></result>
        <result property="findCarType" column="find_car_type"></result>
        <result property="oilWear" column="oil_wear"></result>
    </resultMap>

</mapper>